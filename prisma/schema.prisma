generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id              Int       @id @default(autoincrement())
  title           String
  teacher         Teacher   @relation(fields: [teacherId], references: [id])
  teacherId       Int
  summary         String
  level           String
  availableSlots  Int
  expirationDate  DateTime
  students        Student[] 
}

model Teacher {
  id       Int      @id @default(autoincrement())
  name     String
  courses  Course[] 
}

model Student {
  id              Int      @id @default(autoincrement())
  name            String
  enrolledCourses Course[] 
}
